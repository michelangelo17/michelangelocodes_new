{
  "name": "michelangelocodes_new",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npx tailwindcss build src/public/styles.css -o dist/public/styles.css && tsc && npm run build-html",
    "start": "node dist/server.js",
    "dev:build": "tsc -w",
    "dev:tailwind": "npx tailwindcss build src/public/styles.css -o dist/public/styles.css --watch",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:html": "nodemon --watch src/public --ext html --exec \"npm run build-html\"",
    "build-html": "cp -r src/public/*.html dist/public/ && cp -r src/public/content dist/public/content && mkdir -p dist/public/images && cp -v -r src/public/images/* dist/public/images && mkdir -p dist/public/js && cp -v -r src/public/js/* dist/public/js",
    "dev": "concurrently \"npm run dev:build\" \"npm run dev:tailwind\" \"npm run dev:server\" \"npm run dev:html\"",
    "test": "jest --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "axios": "^1.7.2",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "dompurify": "^3.1.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "htmx": "^0.0.2",
    "jest": "^29.7.0",
    "jsdom": "^24.1.1",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.2.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/csurf": "^1.11.5",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/pg": "^8.11.6",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "node-pg-migrate": "^7.5.2",
    "nodemon": "^3.1.4",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
