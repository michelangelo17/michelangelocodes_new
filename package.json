{
  "name": "michelangelocodes_new",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npx tailwindcss build src/public/styles.css -o dist/public/styles.css && tsc && npm run build-html",
    "start": "node dist/server.js",
    "seed": "npx ts-node src/db/seed.ts",
    "dev:build": "tsc -w",
    "dev:tailwind": "npx tailwindcss build src/public/styles.css -o dist/public/styles.css --watch",
    "dev:server": "nodemon dist/server.js",
    "dev:html": "nodemon --watch src/public --ext html --exec \"npm run build-html\"",
    "build-html": "cp -r src/public/*.html dist/public/ && cp -r src/public/content dist/public/content && mkdir -p dist/public/images && cp -v -r src/public/images/* dist/public/images",
    "dev": "concurrently \"npm run dev:build\" \"npm run dev:tailwind\" \"npm run dev:server\" \"npm run dev:html\"",
    "migrate": "node-pg-migrate up -f migration-config.js",
    "migrate:down": "node-pg-migrate down -f migration-config.js",
    "migrate:create": "node-pg-migrate create -f migration-config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "htmx": "^0.0.2",
    "pg": "^8.12.0",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "node-pg-migrate": "^7.5.2",
    "nodemon": "^3.1.4",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
